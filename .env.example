# CongressDoYourJob.com - Environment Variables Template
# Copy this to .env and fill in your actual values
# NEVER commit .env to git - only commit .env.encrypted

# === API Keys ===

# Google Civic Information API
GOOGLE_CIVIC_API_KEY=your_google_civic_api_key_here

# Congress.gov API
CONGRESS_GOV_API_KEY=your_congress_gov_api_key_here

# New York Times API
NYT_API_KEY=your_nyt_api_key_here

# Twitter/X API
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Meta Graph API (Facebook/Instagram)
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here

# YouTube Data API
YOUTUBE_API_KEY=your_youtube_api_key_here

# === Authentication ===

# Clerk
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# === Payments ===

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# === Services ===

# Lob.com (Physical Mail)
LOB_API_KEY=your_lob_api_key_here

# Resend/Mailgun (Email)
RESEND_API_KEY=your_resend_api_key_here
# OR
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here

# === Database ===

# MongoDB - Choose Local (Docker) OR Atlas (Production)
# For local development with Docker: docker-compose up -d
MONGODB_URI_LOCAL="mongodb://dev_user:dev_password@localhost:27017/congressdoyourjob?authSource=admin"

# MongoDB Atlas (Production)
MONGODB_URI_ATLAS=your_mongodb_atlas_connection_string_here

# Set to "true" for local development, "false" for Atlas
USE_LOCAL_DB="true"

# Active connection (automatically set based on USE_LOCAL_DB)
# For local dev: use MONGODB_URI_LOCAL
# For production: use MONGODB_URI_ATLAS
MONGODB_URI="mongodb://dev_user:dev_password@localhost:27017/congressdoyourjob?authSource=admin"

# Redis (Upstash)
REDIS_URL=your_redis_url_here

# === Feature Flags ===

# LaunchDarkly
NEXT_PUBLIC_LAUNCHDARKLY_CLIENT_ID=your_launchdarkly_client_id_here

# === Monitoring ===

# Sentry
SENTRY_DSN=your_sentry_dsn_here

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# === Optional/Future ===

# OpenStates API
OPENSTATES_API_KEY=your_openstates_api_key_here

# LegiScan API
LEGISCAN_API_KEY=your_legiscan_api_key_here

# === Environment ===
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
